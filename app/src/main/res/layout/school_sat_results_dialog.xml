<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/math_title_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="@string/math_result"
      android:textAppearance="?textAppearanceBody1" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/math_result_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:textAppearance="?textAppearanceBody1"
      tools:text="100" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/reading_title_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="@string/reading_result"
      android:textAppearance="?textAppearanceBody1" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/reading_result_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:textAppearance="?textAppearanceBody1"
      tools:text="100" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/writing_title_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="@string/writing_result"
      android:textAppearance="?textAppearanceBody1" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/writing_result_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:textAppearance="?textAppearanceBody1"
      tools:text="100" />

  <androidx.constraintlayout.helper.widget.Flow
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:layout_margin="@dimen/screen_margin"
      app:constraint_referenced_ids="math_title_view,math_result_view,reading_title_view,reading_result_view,writing_title_view,writing_result_view"
      app:flow_maxElementsWrap="2"
      app:flow_wrapMode="aligned"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>